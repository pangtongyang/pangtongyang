<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root_home"
    android:layout_height="@dimen/title_bar_h"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/title_bar_back_bottom"
        android:paddingTop="@dimen/title_bar_back_bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/task_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/task_item_content"
            android:layout_marginLeft="@dimen/alarm_clock_list_left"
            android:singleLine="true"
            android:text="Large Text"
            android:textSize="@dimen/home_fragment_info_item_size" />

        <TextView
            android:id="@+id/task_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_toggle"
            android:layout_marginRight="@dimen/alarm_clock_list_left"
            android:singleLine="true"
            android:text="Large Text"
            android:textSize="@dimen/home_fragment_info_item_size"
            android:visibility="gone"/>


        <ToggleButton
            android:id="@+id/item_toggle"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_add_padding"
            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:checked="false"
            android:gravity="right|center_vertical"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>

    <View
        android:id="@+id/item_home_task"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_bg" />

</RelativeLayout>
