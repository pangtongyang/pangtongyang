<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lbcy.com.cn.wristband.activity.ScanHeartRateActivity">


    <include
        android:id="@+id/title_up_layout"
        layout="@layout/title_bar_activity" />

    <!--心率监测 togglebutton-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_save_right"
                android:layout_toLeftOf="@+id/set_heart_toggle"
                android:singleLine="true"
                android:text="@string/activity_set_heart"
                android:textSize="@dimen/home_fragment_info_item_size" />

            <ToggleButton
                android:id="@+id/set_heart_toggle"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_add_padding"
                android:background="@android:color/transparent"
                android:button="@drawable/ios7_btn"
                android:checked="false"
                android:gravity="right|center_vertical"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />

    </RelativeLayout>

    <!--监测频率-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_save_right"
                android:layout_toLeftOf="@+id/set_heartrate_content"
                android:singleLine="true"
                android:textColor="@color/login_bg"
                android:text="@string/activity_set_heartrate"
                android:textSize="@dimen/home_fragment_info_item_size" />

            <TextView
                android:id="@+id/set_heartrate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/task_item_arrow"
                android:layout_marginRight="@dimen/alarm_clock_list_left"
                android:singleLine="true"
                android:textColor="@color/login_bg"
                android:text="10分钟/次"
                android:textSize="@dimen/home_fragment_info_item_size" />


            <ImageView
                android:id="@+id/task_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/alarm_clock_list_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_add_padding"
                android:src="@drawable/selector_item_img"
                android:visibility="visible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />
    </RelativeLayout>

    <!--心率预警 togglebutton-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_save_right"
                android:layout_toLeftOf="@+id/call_heart_toggle"
                android:singleLine="true"
                android:text="@string/activity_call_heart"
                android:textSize="@dimen/home_fragment_info_item_size" />

            <ToggleButton
                android:id="@+id/call_heart_toggle"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_add_padding"
                android:background="@android:color/transparent"
                android:button="@drawable/ios7_btn"
                android:checked="false"
                android:gravity="right|center_vertical"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />
    </RelativeLayout>

    <!--预警范围-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_save_right"
                android:layout_toLeftOf="@+id/setmaxmin_arrow"
                android:singleLine="true"
                android:text="@string/activity_max_min"
                android:textSize="@dimen/home_fragment_info_item_size" />

            <ImageView
                android:id="@+id/setmaxmin_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/alarm_clock_list_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_add_padding"
                android:src="@drawable/selector_item_img"
                android:visibility="visible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/login_edit_marginleft"
                android:layout_toLeftOf="@+id/max_heartrate_content"
                android:singleLine="true"
                android:textColor="@color/login_bg"
                android:text="@string/activity_max_heartrate"
                android:textSize="@dimen/home_fragment_info_item_size" />

            <TextView
                android:id="@+id/max_heartrate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/max_item_arrow"
                android:layout_marginRight="@dimen/alarm_clock_list_left"
                android:singleLine="true"
                android:text="10分钟/次"
                android:textColor="@color/login_bg"
                android:textSize="@dimen/home_fragment_info_item_size" />


            <ImageView
                android:id="@+id/max_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/alarm_clock_list_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_add_padding"
                android:src="@drawable/selector_item_img"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />
    </RelativeLayout>

    <!--最小心率-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/login_edit_marginleft"
                android:layout_toLeftOf="@+id/min_heartrate_content"
                android:singleLine="true"
                android:textColor="@color/login_bg"
                android:text="@string/activity_min_heartrate"
                android:textSize="@dimen/home_fragment_info_item_size" />

            <TextView
                android:id="@+id/min_heartrate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/min_item_arrow"
                android:layout_marginRight="@dimen/alarm_clock_list_left"
                android:singleLine="true"
                android:text="10分钟/次"
                android:textColor="@color/login_bg"
                android:textSize="@dimen/home_fragment_info_item_size" />


            <ImageView
                android:id="@+id/min_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/alarm_clock_list_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_add_padding"
                android:src="@drawable/selector_item_img"
                android:visibility="invisible"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />
    </RelativeLayout>
</LinearLayout>
