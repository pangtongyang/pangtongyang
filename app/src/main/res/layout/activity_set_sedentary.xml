<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lbcy.com.cn.wristband.activity.SetSedentaryActivity">

    <include
        android:id="@+id/title_up_layout"
        layout="@layout/title_bar_activity" />

    <!--久坐提醒 tooglebutton-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom">



            <ImageView
                android:id="@+id/image_sedentary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_save_right"
                android:src="@mipmap/sedentary" />

            <TextView
                android:id="@+id/sedentary_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_sedentary"
                android:layout_marginLeft="@dimen/alarm_clock_list_left"
                android:text="@string/activity_Sedentary"
                />
            <ToggleButton
                android:id="@+id/set_heart_toggle"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_bar_add_padding"
                android:background="@android:color/transparent"
                android:button="@drawable/ios7_btn"
                android:checked="false"
                android:gravity="right|center_vertical"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />

    </RelativeLayout>

    <!--开始久坐提醒-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_save_right"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom"
            android:text="@string/start_Sedentary"
            android:textSize="@dimen/home_fragment_info_item_size"/>

        <Button
            android:id="@+id/StartSedentary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_save_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/title_bar_save_right"
            android:text="time"/>

    </LinearLayout>

    <!--结束久坐时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_save_right"
            android:paddingBottom="@dimen/title_bar_back_bottom"
            android:paddingTop="@dimen/title_bar_back_bottom"
            android:text="@string/end_Sedentary"
            android:textSize="@dimen/home_fragment_info_item_size"/>

        <Button
            android:id="@+id/EndSedentary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_save_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/title_bar_save_right"
            android:text="time"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />
    </LinearLayout>

    <!--时间提醒间隔-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_save_right"
            android:paddingTop="@dimen/title_bar_back_bottom"
            android:text="@string/space_Sedentary"
            android:textSize="@dimen/home_fragment_info_item_size"/>

        <Button
            android:id="@+id/SpaceSedentary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_save_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/title_bar_save_right"
            android:text="time"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#99999999" />
    </LinearLayout>
</LinearLayout>
