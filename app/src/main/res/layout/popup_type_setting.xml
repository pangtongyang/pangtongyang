                android:orientation="horizontal"
                android:background="@drawable/white_tab_bg">
                <TextView
                    android:id="@+id/tv_type_5"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width_50"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingEnd="0dp"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_text"
                    android:text="@string/alarm_set_type_5"/>

                <ImageView
                    android:id="@+id/iv_type_5"
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/width_30"
                    android:src="@mipmap/checkmark_blue"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50"
                android:clickable="true"
                android:orientation="horizontal"
                android:background="@drawable/white_tab_bg">
                <TextView
                    android:id="@+id/tv_type_6"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width_50"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingEnd="0dp"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_text"
                    android:text="@string/alarm_set_type_6"/>

                <ImageView
                    android:id="@+id/iv_type_6"
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/width_30"
                    android:src="@mipmap/checkmark_blue"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>