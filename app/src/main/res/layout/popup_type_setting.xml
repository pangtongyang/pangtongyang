<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popup_bg"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50"
                android:text="@string/alarm_set_repeat_set"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16"
                android:background="@drawable/repeat_set_top_bg"/>
            <RelativeLayout
                android:id="@+id/rl_type_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50"
                android:clickable="true"
                android:orientation="horizontal"
                android:background="@drawable/white_tab_bg">
                <TextView
                    android:id="@+id/tv_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width_50"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingEnd="0dp"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_text"
                    android:text="@string/alarm_set_type_1"/>

                <ImageView
                    android:id="@+id/iv_type_1"
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/width_30"
                    android:src="@mipmap/checkmark_blue"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50"
                android:clickable="true"
                android:orientation="horizontal"
                android:background="@drawable/white_tab_bg">
                <TextView
                    android:id="@+id/tv_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width_50"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingEnd="0dp"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_text"
                    android:text="@string/alarm_set_type_2"/>

                <ImageView
                    android:id="@+id/iv_type_2"
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/width_30"
                    android:src="@mipmap/checkmark_blue"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50"
                android:clickable="true"
                android:orientation="horizontal"
                android:background="@drawable/white_tab_bg">
                <TextView
                    android:id="@+id/tv_type_3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width_50"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingEnd="0dp"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_text"
                    android:text="@string/alarm_set_type_3"/>

                <ImageView
                    android:id="@+id/iv_type_3"
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/width_30"
                    android:src="@mipmap/checkmark_blue"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50"
                android:clickable="true"
                android:orientation="horizontal"
                android:background="@drawable/white_tab_bg">
                <TextView
                    android:id="@+id/tv_type_4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width_50"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingEnd="0dp"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_text"
                    android:text="@string/alarm_set_type_4"
                    android:layout_below="@+id/iv_type_4"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/iv_type_4"
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/width_30"
                    android:src="@mipmap/checkmark_blue"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50"
