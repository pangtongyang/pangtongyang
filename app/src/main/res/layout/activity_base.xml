<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_web_content"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_50"
        android:background="@color/blue">

        <TextView
            android:id="@+id/tv_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/width_50"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_back_bg"
            android:clickable="true"
            android:padding="@dimen/padding_13"
            android:src="@mipmap/back_white" />

        <ImageView
            android:id="@+id/iv_righticon"
            android:layout_width="@dimen/width_50"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_back_bg"
            android:clickable="true"
            android:padding="@dimen/padding_13"
            android:visibility="gone"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/base_contentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white" >
    </FrameLayout>

</LinearLayout>