<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lbcy.com.cn.wristband.activity.AlarmClockListActivity">

    <include
        android:id="@+id/title_up_layout"
        layout="@layout/title_bar_activity"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/alarm_clock_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/alarm_clock_list_left"
                android:layout_marginRight="@dimen/alarm_clock_list_left"
                android:layout_marginBottom="@dimen/alarm_clock_list_top"
                android:layout_marginTop="@dimen/alarm_clock_list_top"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
