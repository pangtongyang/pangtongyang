<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_80"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/width_40"
                            android:layout_height="@dimen/width_40"
                            android:layout_marginStart="25dp"
                            android:src="@mipmap/step" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_avg_step"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="@color/black_text"
                                    android:textSize="@dimen/textsize_22" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/step"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/textsize_12" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@color/bg_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/width_40"
                            android:layout_height="@dimen/width_40"
                            android:layout_marginStart="25dp"
                            android:src="@mipmap/calorie" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_avg_calories"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="@color/black_text"
                                    android:textSize="@dimen/textsize_22" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/calorie"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/textsize_12" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_5"
                    android:background="@color/bg_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_80"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/width_40"
                            android:layout_height="@dimen/width_40"
                            android:layout_marginStart="25dp"
                            android:src="@mipmap/date" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_max_step_week"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="@color/black_text"
                                    android:textSize="@dimen/textsize_22" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/date"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/textsize_12" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@color/bg_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/width_40"
                            android:layout_height="@dimen/width_40"
                            android:layout_marginStart="25dp"
                            android:src="@mipmap/bestday" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_max_step_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="@color/black_text"
                                    android:textSize="@dimen/textsize_22" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/bestday"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/textsize_12" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_5"
                    android:background="@color/bg_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_80"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/width_40"
                            android:layout_height="@dimen/width_40"
                            android:layout_marginStart="25dp"
                            android:src="@mipmap/sports" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_count_days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="@color/black_text"
                                    android:textSize="@dimen/textsize_22" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/sports"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/textsize_12" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@color/bg_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/width_40"
                            android:layout_height="@dimen/width_40"
                            android:layout_marginStart="25dp"
                            android:src="@mipmap/standard" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_standards_days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="@color/black_text"
                                    android:textSize="@dimen/textsize_22" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/standard"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/textsize_12" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50"
                android:background="@color/bg_color"
                android:orientation="horizontal"
                android:padding="@dimen/padding_5">

                <View
                    android:layout_width="@dimen/width_5"
                    android:layout_height="@dimen/width_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_20"
                    android:background="@drawable/login_bg_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_20"
                    android:gravity="start|center_vertical"
                    android:text="@string/setstep"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/textsize_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:gravity="center_horizontal"
                    android:text="@string/setstatistics"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="@dimen/textsize_18" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/text_step_1"
                            android:layout_width="@dimen/width_45"
                            android:layout_height="@dimen/width_45"
                            android:background="@drawable/rectangle_gray"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:layout_marginEnd="@dimen/margin_5"
                            android:textSize="@dimen/textsize_32"/>
                        <TextView
                            android:id="@+id/text_step_2"
                            android:layout_width="@dimen/width_45"
                            android:layout_height="@dimen/width_45"
                            android:background="@drawable/rectangle_gray"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:layout_marginEnd="@dimen/margin_5"
                            android:textSize="@dimen/textsize_32"/>
                        <TextView
                            android:id="@+id/text_step_3"
                            android:layout_width="@dimen/width_45"
                            android:layout_height="@dimen/width_45"
                            android:background="@drawable/rectangle_gray"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:layout_marginEnd="@dimen/margin_5"
                            android:textSize="@dimen/textsize_32"/>
                        <TextView
                            android:id="@+id/text_step_4"
                            android:layout_width="@dimen/width_45"
                            android:layout_height="@dimen/width_45"
                            android:background="@drawable/rectangle_gray"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:layout_marginEnd="@dimen/margin_5"
                            android:textSize="@dimen/textsize_32"/>
                        <TextView
                            android:id="@+id/text_step_5"
                            android:layout_width="@dimen/width_45"
                            android:layout_height="@dimen/width_45"
                            android:background="@drawable/rectangle_gray"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_32"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ll_step"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_alignParentBottom="true"
                        android:text="步"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_18" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lable_hobby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center"
                        android:text="@string/fansports"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:id="@+id/lable_amateur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center"
                        android:text="@string/amateursports"
                        android:textColor="@color/coloraccent"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:id="@+id/lable_specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center"
                        android:text="@string/professionalsport"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_16" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/appCompatSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="90000"
                    android:maxHeight="@dimen/width_30"
                    android:progressDrawable="@drawable/seekbar_background_style"
                    android:thumb="@drawable/seekbar_thumb_style"
                    android:thumbOffset="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center"
                        android:layout_marginStart="-20dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center"
                        android:layout_weight="1"
                        android:text="30000"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center"
                        android:layout_weight="1"
                        android:text="60000"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center"
                        android:layout_marginEnd="-20dp"
                        android:layout_weight="1"
                        android:text="90000"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_50"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/linearlayout_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start|center"
                        android:text="步行 "
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:id="@+id/walk_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/width_40"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle_gray"
                        android:gravity="start|center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="15"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/textsize_22" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start|center"
                        android:text=" 分钟"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:gravity="start|center"
                        android:text="或"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/textsize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:gravity="start|center"
                        android:text="跑步 "
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:id="@+id/run_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/width_40"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle_gray"
                        android:gravity="start|center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="15"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/textsize_22" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start|center"
                        android:text=" 分钟"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/textsize_14" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_70"
                    android:layout_marginStart="@dimen/margin_70"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:background="@drawable/login_bg_blue"
                    android:text="@string/makesurestatistics"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_edit_hint" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
