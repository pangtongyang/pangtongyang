<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_20"
        android:paddingBottom="@dimen/padding_20">
        <ImageView
            android:id="@+id/iv_help_left"
            android:layout_width="@dimen/width_30"
            android:layout_height="@dimen/width_30"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:src="@mipmap/question"/>

        <TextView
            android:id="@+id/tv_help_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10"
            android:text="如何连接蓝牙设备？"
            android:layout_marginEnd="@dimen/margin_10"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/black_text"
            android:layout_toStartOf="@+id/iv_help_right"
            android:layout_toEndOf="@+id/iv_help_left"/>

        <ImageView
            android:id="@+id/iv_help_right"
            android:layout_width="@dimen/width_20"
            android:layout_height="@dimen/width_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_down"/>
    </RelativeLayout>

</LinearLayout>