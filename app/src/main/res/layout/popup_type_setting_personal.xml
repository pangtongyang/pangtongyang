<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popup_bg"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/back_clock"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:text="提示"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_18"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="请输入闹钟类型"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_14"
                android:gravity="center"/>

            <EditText
                android:id="@+id/et_clock"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_30"
                android:background="@drawable/et_line_gray"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_10"
                android:paddingStart="@dimen/padding_10"
                android:paddingEnd="@dimen/padding_10"
                android:hint="@string/alarm_set_clock_type"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/gray_text"
                android:textColor="@color/black"
                android:textSize="@dimen/login_edit_hint"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50">
                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textSize="@dimen/textsize_16"
                    android:textColor="@color/black_text"
                    android:background="@drawable/btn_left_bottom_circle_white_bg"/>

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/confirm"
                    android:textSize="@dimen/textsize_16"
                    android:background="@drawable/btn_right_bottom_circle_white_bg"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>