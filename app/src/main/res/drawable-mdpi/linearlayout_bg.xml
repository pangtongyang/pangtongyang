<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 点击状态下的效果 -->
    <item android:state_pressed="true" android:drawable="@color/bg_color">
        <shape>
            <!-- 设置背景填充色为black -->
            <solid android:color="@color/black"/>
            <!-- 设置边框宽度为1dp，边框颜色为black -->
            <stroke android:width="1px" android:color="@color/black" />
        </shape>
    </item>
    <!-- 正常状态下(非点击)的效果 -->
    <item android:state_pressed="false">
        <shape>
            <!-- 设置背景填充色为白色 -->
            <solid android:color="@color/white"/>
            <!-- 设置边框宽度为1dp，边框颜色为seperator_color -->
            <!--<stroke android:width="1px" android:color="@color/seperator_color" />-->
        </shape>
    </item>

</selector>