<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="1dp" android:top="1dp">
                <shape
                    android:shape="oval"
                    android:useLevel="false">

                    <solid android:color="#66E9E8E6"/>
                    <stroke
                        android:width="1dp"
                        android:color="#666A6B7B"/>
                    <size android:height="25dp" android:width="25dp" />
                </shape>
            </item>
            <!-- 相当于padding -->
            <item android:bottom="0dp" android:right="0dp">
                <shape
                    android:shape="oval"
                    android:useLevel="false">

                    <solid android:color="@android:color/white"/>
                    <stroke
                        android:width="2dp"
                        android:color="#66E9E8E6"/>
                    <size android:height="25dp" android:width="25dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="1dp" android:top="1dp">
                <shape
                    android:shape="oval"
                    android:useLevel="false">

                    <solid android:color="#6663D973"/>
                    <stroke
                        android:width="1dp"
                        android:color="#6663D973"/>
                    <size android:height="25dp" android:width="25dp" />
                </shape>
            </item>
            <!-- 相当于padding -->
            <item android:bottom="0dp" android:right="0dp">
                <shape
                    android:shape="oval"
                    android:useLevel="false">

                    <solid android:color="@android:color/white"/>
                    <stroke
                        android:width="2dp"
                        android:color="#6663D973"/>
                    <size android:height="25dp" android:width="25dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
